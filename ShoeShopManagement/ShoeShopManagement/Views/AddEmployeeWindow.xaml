<Window x:Class="ShoeShopManagement.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeShopManagement.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        DataContext="{StaticResource EmployeeVM}"
        x:Name="wdAddEmployee"
        WindowStartupLocation="CenterScreen"
        Title="AddEmployeeWindow" Height="840" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid 
            x:Name="grdIDEmployee">
            <Label
                    x:Name="lbIDEmployee"
                    Content="Mã nhân viên" 
                    HorizontalAlignment="Left"
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}"
                    Height="32" 
                    Margin="50 0 0 0" 
                    VerticalAlignment="Center"/>
            <Rectangle
                    x:Name="recIDEmployee"
                    Width="300" 
                    Height="40"
                    RadiusY="6"
                    RadiusX="6" 
                    Margin="0 0 50 0"
                    Stroke="{StaticResource Gray}" 
                    HorizontalAlignment="Right"/>
            <TextBox 
                    x:Name="txtIDEmployee"
                    materialDesign:HintAssist.Hint="Mã tự động"
                    HorizontalAlignment="Right"  
                    Width="280" 
                    FontSize="14" 
                    BorderThickness="0" 
                    MaxLines="1"
                    Padding="0" 
                    Foreground="{StaticResource PaletteColor3}" 
                    Margin="0,0,60,0" 
                    IsReadOnly="True" 
                    Height="40" 
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center" 
                    VerticalAlignment="Center" 
                    SelectionBrush="{x:Null}"
                    FontWeight="SemiBold"
                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PaletteColor3}">
            </TextBox>
        </Grid>
        <Grid  
            Grid.Row="1"
            x:Name="grdName">
            <Label 
                    x:Name="lbName"
                    Content="Họ tên"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}" 
                    Height="40" 
                    Margin="50 0 0 0" 
                    VerticalAlignment="Center"/>
            <Rectangle 
                    x:Name="recName"
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Width="300" 
                    RadiusY="6" 
                    RadiusX="6"
                    Stroke="{StaticResource PaletteColor1}" 
                    Margin="0 0 50 0"/>
            <TextBox 
                    x:Name="txtName"
                    materialDesign:HintAssist.Hint="Họ và tên"
                    HorizontalAlignment="Right"
                    Cursor="IBeam"
                    Height="40" 
                    Width="280" 
                    FontSize="14" 
                    BorderThickness="0" 
                    MaxLines="1"
                    Padding="0" 
                    Validation.ErrorTemplate="{StaticResource textBoxErrorTemplate}"
                    Foreground="{StaticResource PaletteColor3}"
                    Margin="0 0 60 0"
                    HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Center" 
                    FontWeight="SemiBold" 
                    SelectionBrush="{x:Null}" 
                    CaretBrush="{x:Null}"
                    materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PaletteColor3}"/>
        </Grid>
        <Grid   
            x:Name="grdDate" 
            Grid.Row="2">
            <Label 
                    x:Name="lbDate"
                    Content="Ngày sinh"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}" 
                    Height="40" 
                    Margin="50 0 0 0" 
                    VerticalAlignment="Center"/>
            <DatePicker 
                    x:Name="txtDate"
                    materialDesign:HintAssist.Hint="Ngày sinh"
                    HorizontalAlignment="Right"
                    Cursor="IBeam"
                    Height="40" 
                    Width="280" 
                    FontSize="14" 
                    BorderThickness="0" 
                    Padding="0" 
                    Foreground="{StaticResource PaletteColor3}"
                    Margin="0,0,60,0" 
                    HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Center" 
                    FontWeight="SemiBold"/>
            <Rectangle 
                    x:Name="recDate"
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Width="300"
                    Margin="0 0 50 0"
                    RadiusY="6" 
                    RadiusX="6"
                    Stroke="{StaticResource PaletteColor1}"/>
        </Grid>
        <Grid   
            x:Name="grdSex" 
            Grid.Row="3">
            <Label 
                    x:Name="lbSex"
                    Content="Giới tính"
                    HorizontalAlignment="Left" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}"
                    Height="40"
                Margin="50 0 0 0"
                    VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="0 0 100 0">
                <RadioButton
                    x:Name="rdoMale"
                    Style="{StaticResource MaterialDesignLightRadioButton}"
                    IsChecked="True"
                    Content="Nam" 
                    Height="30"
                    Width="101"
                    Padding="20,1,0,0"
                    FontSize="14"
                    FontWeight="Bold" 
                    BorderBrush="{StaticResource PaletteColor3}" 
                    Background="{StaticResource PaletteColor3}" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center"/>
                <RadioButton
                    x:Name="rdoFemale"
                    Style="{StaticResource MaterialDesignLightRadioButton}"
                    BorderBrush="{StaticResource PaletteColor3}" 
                    Background="{StaticResource PaletteColor3}" 
                    Content="Nữ"
                    Padding="20,1,0,0" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Height="30"
                    Width="101" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" Margin="20,0,0,0"/>
            </StackPanel>
            
        </Grid>
        <Grid   
            x:Name="grdStartDate" 
            Grid.Row="4">
            <Label 
                    x:Name="lbStartDate"
                    Content="Ngày vào làm"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}" 
                    Height="40" 
                    Margin="50 0 0 0" 
                    VerticalAlignment="Center"/>
            <DatePicker 
                    x:Name="txtStartDate"
                    materialDesign:HintAssist.Hint="Ngày vào làm"
                    HorizontalAlignment="Right"
                    Cursor="IBeam"
                    Height="40" 
                    Width="280" 
                    FontSize="14" 
                    BorderThickness="0" 
                    Padding="0" 
                    Foreground="{StaticResource PaletteColor3}"
                    Margin="0,0,60,0" 
                    HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Center" 
                    FontWeight="SemiBold"/>
            <Rectangle 
                    x:Name="recStartDate"
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Width="300"
                Margin="0 0 50 0"
                    RadiusY="6" 
                    RadiusX="6"
                    Stroke="{StaticResource PaletteColor1}"/>
        </Grid>
        <Grid   
            x:Name="grdPosition" 
            Grid.Row="5">
            <Label 
                    x:Name="lbPosition"
                    Content="Chức vụ"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}" 
                    Height="40" 
                    Margin="50 0 0 0" 
                    VerticalAlignment="Center"/>
            <ComboBox 
                    x:Name="txtPosition"
                    materialDesign:HintAssist.Hint="Chức vụ"
                    HorizontalAlignment="Right"
                    Cursor="IBeam"
                    Height="40" 
                    Width="280" 
                    FontSize="14" 
                    BorderThickness="0" 
                    Padding="0" 
                    Foreground="{StaticResource PaletteColor3}"
                    Margin="0,0,60,0" 
                    HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Center" 
                    FontWeight="SemiBold"/>
            <Rectangle 
                    x:Name="recPosition"
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Width="300"
                Margin="0 0 50 0"
                    RadiusY="6" 
                    RadiusX="6"
                    Stroke="{StaticResource PaletteColor1}"/>
        </Grid>
        <Grid 
            x:Name="grdTelephoneNumber"
            Grid.Row="6">
            <Label 
                    x:Name="lbTelephoneNumber"
                    Content="Số điện thoại" 
                    HorizontalAlignment="Left" 
                    FontSize="20" 
                    FontWeight="SemiBold" 
                    Foreground="{StaticResource PaletteColor1}" 
                    Height="32" 
                    Margin="50 0 0 0" 
                    VerticalAlignment="Center"/>
            <Rectangle
                    x:Name="recTelephoneNumber"
                    HorizontalAlignment="Right" 
                    Height="40"  
                    Width="300" 
                    RadiusY="6" 
                    RadiusX="6" 
                    Stroke="{StaticResource PaletteColor1}" 
                    Margin="0 0 50 0"/>
            <TextBox 
                    x:Name="txtTelephoneNumber"
                    materialDesign:HintAssist.Hint="Số điện thoại" 
                    HorizontalAlignment="Right" 
                    MaxLength="10"
                    Height="40"  
                    Width="280" 
                    FontSize="14"
                    BorderThickness="0"
                    MaxLines="1" 
                    Foreground="{StaticResource PaletteColor3}"
                    Validation.ErrorTemplate="{StaticResource textBoxErrorTemplate}"
                    Padding="0" 
                    Margin="0,0,60,0" 
                    Cursor="IBeam"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    FontWeight="SemiBold"
                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PaletteColor3}">
            </TextBox>
        </Grid>
        <Grid  
            x:Name="grdAddress"
            Grid.Row="7">
            <Label 
                    x:Name="lbAddress"
                    Content="Địa chỉ" 
                    HorizontalAlignment="Left"
                    FontSize="20" 
                    FontWeight="SemiBold"
                    Foreground="{StaticResource PaletteColor1}" 
                    Height="32" 
                    Margin="50 0 0 0"
                    VerticalAlignment="Center"/>
            <Rectangle 
                    x:Name="recAddress"
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Width="300" 
                    RadiusY="6"
                    RadiusX="6" 
                    Stroke="{StaticResource PaletteColor1}" 
                    Margin="0 0 50 0"/>
            <TextBox
                    x:Name="txtAddress"
                    materialDesign:HintAssist.Hint="Địa chỉ" 
                    HorizontalAlignment="Right" 
                    Width="280"
                    Height="40"
                    FontSize="14" 
                    BorderThickness="0" 
                    MaxLines="1" 
                    Foreground="{StaticResource PaletteColor3}"
                    Validation.ErrorTemplate="{StaticResource textBoxErrorTemplate}"
                    Padding="0"  
                    Margin="0,0,60,0" 
                    Cursor="IBeam"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left" 
                    VerticalContentAlignment="Center" 
                    FontWeight="SemiBold"
                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PaletteColor3}">
            </TextBox>
        </Grid>
        <StackPanel   
            Grid.Row="8"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 90 0"
            Orientation="Horizontal"
            x:Name="grdButton" 
            Height="60">
            <Button
                Height="40"
                Command="{Binding SaveEmployeeCommand}" 
                CommandParameter="{Binding ElementName=wdAddEmployee}"
                materialDesign:ButtonAssist.CornerRadius="2"
                BorderThickness="0"
                Background="{DynamicResource PaletteColor3}"
                ToolTip="Thêm nhân viên" 
                Margin="0" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="100"
                FocusVisualStyle="{x:Null}"
                Content="Lưu" 
                FontSize="18" 
                FontWeight="SemiBold"/>
            <Button
                Height="40"
                Command="{Binding CancalAddEmployeeCammand}" 
                CommandParameter="{Binding ElementName=wdAddEmployee}"
                materialDesign:ButtonAssist.CornerRadius="2"
                BorderThickness="0"
                Background="{DynamicResource PaletteColor3}"
                ToolTip="Thêm nhân viên" 
                Margin="20 0 0 0" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="100"
                FocusVisualStyle="{x:Null}"
                Content="Bỏ qua" 
                FontSize="18" 
                FontWeight="SemiBold" FlowDirection="LeftToRight"/>
        </StackPanel>
        <Grid  
            x:Name="grdSelectImage"
            Grid.Row="8"
            VerticalAlignment="Center"
            Width="120"
            Height="120"
            Margin="50 0 0 0"
            HorizontalAlignment="Left">
            <Rectangle 
                x:Name="recImage"
                StrokeDashArray="4 2" 
                Stroke="{StaticResource PaletteColor3}" 
                StrokeThickness="4" 
                RadiusX="4" 
                RadiusY="4"
                Width="120"
                Height="120"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"/>
            <Button 
                x:Name="btnSelectImage"
                Content="Chọn ảnh"
                Background="{StaticResource PaletteColor3}"
                BorderThickness="0"
                Height="35" 
                Width="100" 
                Command="{Binding SelectImageCommand}"
                CommandParameter="{Binding ElementName=grdSelectImage}"
                ToolTip="Chọn ảnh" 
                Margin="0,0,0,12" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                FocusVisualStyle="{x:Null}"
                FontSize="16">
            </Button>
            <materialDesign:PackIcon 
                x:Name="iconImage" 
                Kind="FileImageOutline" 
                Foreground="{StaticResource PaletteColor3}"
                Width="64" 
                Height="54"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"  
                Margin="0,15,0,0"/>
        </Grid>
    </Grid>
</Window>
